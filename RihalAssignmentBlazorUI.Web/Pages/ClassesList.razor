@page "/classes"
@inherits ClassesListBase

<h3>Classes List</h3>
@if (Classes == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="container">
        <div class="row bg-light">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Class Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Classes.Any())
                    {
                        @foreach (var Class in Classes)
                        {
                            <tr>
                                <td>@Class.Id</td>
                                <td>@Class.Name</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6"><strong>No Classes available</strong></td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}