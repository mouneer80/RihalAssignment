@page "/students"
@inherits StudentsListBase

<h3>Students List</h3>
@if (Students == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="container">
        <div class="row bg-light">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Student Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Students.Any())
                    {
                        @foreach (var Student in Students)
                        {
                            <tr>
                                <td>@Student.Id</td>
                                <td>@Student.Name</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6"><strong>No Students available</strong></td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}